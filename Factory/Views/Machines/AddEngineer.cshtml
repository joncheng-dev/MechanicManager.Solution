@{
  Layout = "_Layout";
}

@model MechanicManager.Models.Machine

<p>Add an engineer licensed to work on this machine.</p>
<div class="row">
  <div class="col-5">
    @if(@ViewBag.EngineersList.Count == 0)
    {
      <p class="text-danger">It appears the list of engineers is empty. Add to the list of engineers before attempting to assign a machine to them.</p>
      <p>@Html.ActionLink("Add Engineer to database", "Create", "Engineers")</p>
    }
    else
    {
      @using (Html.BeginForm())
      {
        @Html.HiddenFor(entry => entry.MachineId)
        @Html.Label("Select engineer")
        @Html.DropDownList("EngineerId")

        <input type="submit" value="Save" />
      }
    }  
  </div>
</div>
<hr/>
<p>@Html.ActionLink("Back to Details", "Details", new { id = Model.MachineId })</p>